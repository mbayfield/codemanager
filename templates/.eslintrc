{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"mocha": true
	},
	"rules": {
		"camelcase": 0,
		"consistent-return": 1,
		"curly": [2, "multi-line"],
		"comma-dangle": [2, "never"],
		"new-cap": 1,
		"no-alert": 1,
		"no-caller": 1,
		"no-extra-semi": 2,
		"no-cond-assign": 2,
		"no-mixed-requires": 2,
		"no-path-concat": 1,
		"no-process-exit": 1,
		"no-shadow": 0,
		"no-mixed-spaces-and-tabs": 1,
		"no-trailing-spaces": 0,
		"no-multi-spaces": 1,
		"no-underscore-dangle": 0,
		"no-use-before-define": 1,
		"no-unused-vars": 1,
		"no-undef": 2,
		"no-irregular-whitespace": 1,
		"object-curly-spacing": [1, "always"],
		"quotes": [2, "single", "avoid-escape"],
		"semi": [2, "always"],
		"space-infix-ops": 1,
		"handle-callback-err": 2,
		"strict": [2, "global"],
		"yoda": 1,
		"array-bracket-spacing": [2, "always"],
		"eol-last": 2,
		"space-after-keywords": [2, "always"],
		"space-before-blocks": [2, "always"],
		"key-spacing": 0,
		"indent": [2, "tab"]
	},
	"ecmaFeatures": {
		"templateStrings": 1,
		"arrowFunctions": 1
	},
	"globals": {
		"$": true,
		"_": true,
		"it": true,
		"jQuery": true
	}
}
